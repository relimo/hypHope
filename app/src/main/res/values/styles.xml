<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkestGreen</item>
        <item name="colorPrimaryDark">@color/medumGreen</item>
        <item name="colorAccent">@color/lightGreen</item>

        <!--  <item name="android:actionBarStyle">@style/actionBarCustomStyle</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <style name="actionBarCustomStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@android:color/holo_green_dark</item>
    </style>




    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    <style name="DialogAnimation2" >
        <!-- <item name="android:windowBackground">@color/transparent</item>-->
        <item name="android:windowEnterAnimation">@anim/bounce_anim</item>
    </style>



</resources>
